<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/AppealStatusRelative">

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/AppealStatusCardView">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <ImageView
                android:id="@+id/AppealStatusDetailPicImageView"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:padding="2dp"
                android:src="@drawable/ic_account_circle_black_24dp" />



                <TextView
                    android:id="@+id/AppealStatusDetailTitlePlainText"
                    android:layout_width="match_parent"
                    android:text="Appeal Title"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:padding="2dp"
                    android:layout_margin="5dp"/>

                <TextView
                    android:id="@+id/AppealStatusDetailNgoNamePlainText"
                    android:layout_width="match_parent"
                    android:text="NGO Name"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:padding="2dp"
                    android:layout_margin="5dp"/>


            </LinearLayout>
        </android.support.v7.widget.CardView>
    </RelativeLayout>




















</android.support.constraint.ConstraintLayout>