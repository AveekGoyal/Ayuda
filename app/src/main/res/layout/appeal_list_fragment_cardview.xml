<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout android:id="@+id/AppealListRelativeLayout"
    android:padding="5dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <android.support.v7.widget.CardView
        android:id="@+id/AppealFragmentCardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:padding="10dp"
        xmlns:android="http://schemas.android.com/apk/res/android">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/AppealListDpImageView"
                android:layout_marginTop="10dp"
                android:layout_margin="10dp"
                android:src="@drawable/ic_account_circle_black_24dp"
                android:layout_width="50dp"
                android:layout_height="50dp"
                />

            <TextView
                android:id="@+id/AppealListUsernamePlainText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="50dp"
                android:layout_marginTop="-60dp"
                android:layout_marginStart="70dp"
                android:hint="Username"
                android:padding="8dp"
                android:textSize="16sp"
                android:textStyle="bold|italic"
                android:typeface="serif"
                android:layout_marginLeft="100dp"
                android:layout_marginRight="20dp" />

            <ImageView
                android:id="@+id/AppealListPictureImageView"
                android:layout_gravity="center"
                android:layout_width="300dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="5dp"
                android:layout_height="300dp"
                android:adjustViewBounds="true"
                android:cropToPadding="true"
                android:scaleType="fitXY"
                android:src="@drawable/ic_account_circle_black_24dp" />
            <TextView
                android:id="@+id/AppealListTitlePlainText"
                android:textSize="18sp"
                android:textStyle="bold"
                android:padding="10dp"
                android:text="Appeal Title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/AppealListDateCreatedPlainText"
                android:text="Date Created : "
                android:textStyle="italic"
                android:padding="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>


    </android.support.v7.widget.CardView>
</RelativeLayout>
