<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="16dp"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Contact Us"
            android:textSize="30dp"
            android:textStyle="bold"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Address: MIT,Meerut"
            android:id="@+id/ContactUsAddressPlainText"
            android:textSize="20dp"
            android:layout_margin="10dp"></TextView>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Mobile number : +91**********"
            android:textSize="20dp"
            android:layout_margin="10dp"
            android:id="@+id/ContactUsContactNoPlainText"></TextView>

        <TextView
            android:id="@+id/ContactUsEmailPlainText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="Email Address : admin@ayuda.com "
            android:textSize="20dp"></TextView>
    </LinearLayout>


</android.support.constraint.ConstraintLayout>