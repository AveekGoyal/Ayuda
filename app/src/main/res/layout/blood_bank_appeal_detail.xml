<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <android.support.v7.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/BloodPicProofImageView"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:layout_marginTop="10dp"
            android:src="@drawable/ic_account_circle_black_24dp"
            />

        <TextView
            android:id="@+id/BloodPatientNamePlainText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Patient Name"
            android:padding="2dp"
            android:layout_margin="3dp"/>

        <TextView
            android:id="@+id/textView1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:textColor="@color/Black"
            android:text="Family Information:"
            />

        <TextView
            android:id="@+id/BloodBankFamilyMemberNamePlainText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Name"
            android:layout_margin="3dp"
            />

        <TextView
            android:id="@+id/BloodBankFamilyMemberContactNoPlainText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Mobile Number"
            android:layout_margin="3dp"
            android:inputType="number"
            />

        <TextView
            android:id="@+id/BloodBankFamilyMemberAltContactNoPlainText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="3dp"
            android:hint="Alternate Mobile Number"
            android:inputType="number"
           />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="3dp"
            android:textSize="20sp"
            android:textColor="@color/Black"
            android:text="Hospital Information:"
            />

        <TextView
            android:id="@+id/BloodBankHospitalNamePlainText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="3dp"
            android:hint="Hospital Name"
            />

        <TextView
            android:id="@+id/BloodBankHospitalContactNoPlainText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="3dp"
            android:hint="Contact Number"
            android:inputType="number" />

        <TextView
            android:id="@+id/BloodBankHospitalAddressPlainText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="3dp"
            android:hint="Hospital Address"
            android:inputType="textMultiLine"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_margin="5dp">

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="3dp"
                android:layout_weight="1"
                android:textStyle="bold"
                android:text="Blood Group"
                />


            <TextView
                android:id="@+id/BloodBankGroupPlainText"
                android:layout_width="wrap_content"
                android:layout_margin="3dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                />

        </LinearLayout>


        <TextView
            android:id="@+id/BloodBankPlateletsCountPlainText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="3dp"
            android:textStyle="bold"
            android:hint="Platelets Count"
            />

        <TextView
            android:id="@+id/BloodBankAmountNeededPlainText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="3dp"
            android:hint="Amount Needed (If you know)"
            />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:layout_marginTop="10dp">

        <Button
            android:id="@+id/BloodBankAcceptButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Accept"
            android:enabled="false"
            android:layout_marginBottom="25dp" />

        <Button
            android:id="@+id/BloodBankRejectButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Reject"
            android:enabled="false"
            android:layout_marginBottom="25dp"
            android:layout_marginLeft="60dp"/>

        </LinearLayout>


    </android.support.v7.widget.LinearLayoutCompat>
</ScrollView>