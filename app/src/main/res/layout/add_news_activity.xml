<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_margin="16dp">

        <ImageButton
            android:id="@+id/AddNewsVideoOrPictureProof"
            android:layout_width="match_parent"
            android:layout_height="350dp"
            app:srcCompat="@android:drawable/presence_video_away" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_margin="5dp">

            <TextView
                android:id="@+id/textView123"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:text="Choose Category"
                android:textSize="20dp"

                />

            <Spinner
                android:id="@+id/AddNewsChooseCategorySpinner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"></Spinner>

        </LinearLayout>

        <EditText
            android:id="@+id/AddNewsHeadlineTextBox"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:hint="Headline" />

        <EditText
            android:id="@+id/AddNewsDescriptionTextBox"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:hint="Description"/>

        <Button
            android:id="@+id/AddNewsUploadButton"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:text="Upload"
            android:layout_gravity="center"/>
    </LinearLayout>
</ScrollView>
