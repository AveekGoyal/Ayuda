<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.admin.ayuda.Activity.Login.MainActivity">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:text="Type of User:"
            android:textStyle="bold"

            android:textSize="25dp" />

        <RadioGroup
            android:id="@+id/loginRadioGroup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center">

            <RadioButton
                android:id="@+id/loginRadioAdmin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ngo Admin" />

            <RadioButton
                android:id="@+id/loginRadioMember"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ngo Member" />

            <RadioButton
                android:id="@+id/loginRadioNonMember"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Non Member" />

        </RadioGroup>



        <EditText
            android:id="@+id/loginEmailTextBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Email"
            android:inputType="textEmailAddress" />

        <EditText
            android:id="@+id/loginPasswordTextBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Password"
            android:inputType="textPassword" />

        <Button
            android:id="@+id/loginLoginButton"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:background="#009688"
            android:text="Login" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="110sp"
            android:text="New User??"
            android:textSize="20dp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/loginNewUserRegButton"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:background="#009688"
            android:text="Create Account" />

    </LinearLayout>


</android.support.constraint.ConstraintLayout>
