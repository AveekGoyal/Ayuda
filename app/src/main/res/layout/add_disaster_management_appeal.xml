<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:orientation="vertical">

        <ImageButton
            android:id="@+id/AddDisasterPicProofImageButton"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:scaleType="fitXY"
            android:src="@drawable/ic_account_circle_black_24dp"
            android:padding="2dp"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Type Of Disasters" />

            <Spinner
                android:id="@+id/AddDisasterTypeOfDisasterSpinner"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1">

            </Spinner>
        </LinearLayout>

        <EditText
            android:id="@+id/AddDisasterDescTextBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Description"
            android:inputType="textMultiLine" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Needs:" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

            <CheckBox
                android:id="@+id/AddDisasterNeedFood"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Food"/>

            <CheckBox
                android:id="@+id/AddDisasterNeedWater"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Water"/>

            <CheckBox
                android:id="@+id/AddDisasterNeedShelter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Shelter"/>

            <CheckBox
                android:id="@+id/AddDisasterNeedClothing"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Clothing"/>

            <CheckBox
                android:id="@+id/AddDisasterNeedMedical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Medical Facilities"/>

            <CheckBox
                android:id="@+id/AddDisasterNeedRehab"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Rehabilitation"/>
        </LinearLayout>

        </LinearLayout>

        <EditText
            android:id="@+id/AddDisasterContactNoTextBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Contact Number"
            android:inputType="number" />

        <EditText
            android:id="@+id/AddDisasterAltContactNoTextBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Alternate Contact Number"
            android:inputType="number" />


        <Button
            android:id="@+id/AddDisasterSafetyButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Safety Procedures"
            android:background="#009688"
            android:layout_gravity="center"
            android:layout_marginBottom="25dp" />

        <Button
            android:id="@+id/AddDisasterSubmitButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/Submit"
            android:background="#009688"
            android:layout_gravity="right"
            android:layout_marginBottom="25dp" />



    </android.support.v7.widget.LinearLayoutCompat>

</ScrollView>