<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_margin="16dp">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Share On Whatsapp"
        android:id="@+id/invitewhatsapp"
        android:layout_gravity="center"
        android:layout_margin="10dp"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Share On Facebook"
        android:layout_gravity="center"
        android:id="@+id/inviteFacebook"
        android:layout_margin="10dp"/>

    <Button
        android:id="@+id/inviteTwitetr"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Share on Twitter"
        android:layout_gravity="center"
        android:layout_margin="10dp"/>

    <Button
        android:layout_width="wrap_content"
        android:id="@+id/inviteG"
        android:layout_height="wrap_content"
        android:text="Share on G+"
        android:layout_gravity="center"
        android:layout_margin="10dp"/>

</LinearLayout>