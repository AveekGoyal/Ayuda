<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <android.support.v7.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:orientation="vertical">

        <ImageButton
            android:id="@+id/AddBloodPicProofImageButton"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:scaleType="fitXY"
            android:src="@drawable/ic_account_circle_black_24dp"
            />

        <EditText
            android:id="@+id/AddBloodPatientNameTextBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:hint="*Patient Name"
            />

        <TextView
            android:id="@+id/textView1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/Black"
            android:text="Family Information:"
            />

        <EditText
            android:id="@+id/AddBloodFamilyMemberNameTextBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Name"
            />

        <EditText
            android:id="@+id/AddBloodFamilyMemberContactNoTextBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Mobile Number"
            android:inputType="number"
            />

        <EditText
            android:id="@+id/AddBloodFamilyMemberAltContactNoTextBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Alternate Mobile Number"
            android:inputType="number"
            />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/Black"
            android:textStyle="bold"
            android:textSize="20sp"
            android:text="Hospital Information:"
            />

        <EditText
            android:id="@+id/AddBloodHospitalNameTextBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:hint="Hospital Name"
            />

        <EditText
            android:id="@+id/AddBloodHospitalContactNoTextBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Contact Number"
            android:inputType="number"
           />

        <EditText
            android:id="@+id/AddBloodHospitalAddressTextBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Hospital Address"
            android:inputType="textMultiLine"
            />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="5dp">

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Blood Group"
                />


            <Spinner
                android:id="@+id/AddBloodGroupSpinner"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
               />

        </LinearLayout>


        <EditText
            android:id="@+id/AddBloodPlateletsCountTextBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:hint="Platelets Count"
            />

        <EditText
            android:id="@+id/AddBloodAmountNeededTextBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:hint="Amount Needed (If you know)"
            />

        <Button
            android:id="@+id/AddBloodSubmitButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/Submit"
            android:background="#009688"
            android:textColor="@color/white"
            android:layout_gravity="center"
            android:layout_marginBottom="25dp" />


    </android.support.v7.widget.LinearLayoutCompat>
</ScrollView>